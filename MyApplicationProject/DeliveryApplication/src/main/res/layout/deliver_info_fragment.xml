<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="@color/yellow">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/gradient"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="@string/DeliveryInfo_Name"/>

    <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <LinearLayout
                android:id="@+id/DelivInfo_Content"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/DelivInfo_ToFav"
                        android:layout_width="120dip"
                        android:layout_height="50dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dip"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/red_button"
                        android:text="@string/DeliveryInfo_Button"
                        android:textColor="@color/black"/>
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="35dip"
                        android:layout_marginLeft="10dip"
                        android:textSize="20sp"
                        android:textColor="@color/red"
                        android:text="@string/DeliveryInfo_Text1"/>

                <TextView
                        android:id="@+id/DelivInfo_departure"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="35dip"
                        android:layout_marginRight="10dip"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="1234456"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="15dip"
                        android:layout_marginLeft="10dip"
                        android:textSize="20sp"
                        android:textColor="@color/red"
                        android:text="@string/DeliveryInfo_Text2"/>

                <TextView
                        android:id="@+id/DelivInfo_where"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="15dip"
                        android:layout_marginRight="10dip"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Отсюда"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="15dip"
                        android:layout_marginLeft="10dip"
                        android:textSize="20sp"
                        android:textColor="@color/red"
                        android:text="@string/DeliveryInfo_Text3"/>

                <TextView
                        android:id="@+id/DelivInfo_to"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="15dip"
                        android:layout_marginRight="10dip"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Туда"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>