<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_blue">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/gradient"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="@string/Delivery_Name"/>

    <ru.deliver.deliverApp.Utils.EditWithDrawable
            android:id="@+id/Deliver_number"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:drawableRight="@android:drawable/ic_delete"
            android:hint="@string/Delivery_Hint"
            android:textSize="22sp"
            android:lines="1"
            android:imeOptions="actionDone"
            android:inputType="text|number"/>

    <Button
            android:id="@+id/Deliver_find"
            android:layout_height="50dip"
            android:layout_width="match_parent"
            android:layout_margin="10dip"
            android:background="@drawable/red_button"
            android:text="@string/Btn_Show"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"/>

    <Button
        android:id="@+id/Deliver_update"
        android:layout_height="50dip"
        android:layout_width="120dip"
        android:layout_marginTop="25dip"
        android:layout_marginLeft="10dip"
        android:background="@drawable/red_button"
        android:text="@string/Btn_Update"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:visibility="gone"/>

    <ListView
            android:id="@+id/Deliver_List"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:cacheColorHint="@color/white"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:divider="@color/black"
            android:dividerHeight="1dip"/>

</LinearLayout>